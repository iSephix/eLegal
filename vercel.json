{
  "version": 2,
  "builds": [
    {
      "src": "index.html",
      "use": "@now/static"
    },
    {
      "src": "/api/*.js",
      "use": "@now/node"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.js"
    }
  ]
}
