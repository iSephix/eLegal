{
  "version": 2,
  "builds": [
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/api/stream",
      "methods": ["POST"],
      "dest": "/api/stream.js"
    }
  ],
  "statics": {
    "public": "public"
  }
}
